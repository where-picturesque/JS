<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
  </head>
  <body>
    <%-include("./header.ejs",{title:"注册店铺",add:false,isshow:true,showlogin:false,showreg:false,showlogout:true,showuser:true})%>
	
	<div class="container">
		<%if(isNew){%>
		<form method="post" action="/shop/register" enctype="multipart/form-data">
		  <div class="form-group">
		    <label for="exampleInputEmail1">店铺名</label>
		    <input type="text" class="form-control" name="shopname" id="exampleInputEmail1" placeholder="用户名">
		  </div>

		  <div class="form-group">
		    <label for="exampleInputPassword1">类型</label>
		    <input type="text" class="form-control" id="exampleInputPassword1"  name="shoptype" placeholder="类型">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">店铺地址</label>
		    <input type="text" class="form-control" id="exampleInputPassword1"  name="address" placeholder="店铺地址">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">店铺头像</label>
		    <input type="file"  id="exampleInputPassword1"  name="shopphoto" >
		  </div>
		  <% if(regerror){%>
		  <p class="error">该店铺名已注册</p>
		  <%}%>
		  <button type="submit" class="btn btn-default">注册</button>
		</form>
		<%}else{%>
		<form method="post" action="/shop/update" enctype="multipart/form-data">
		  <div class="form-group">
		    <label for="exampleInputEmail1">店铺名</label>
		    <input type="text" class="form-control" name="shopname" id="exampleInputEmail1" placeholder="用户名" value="<%=shopinfo.shopname%>">
		  </div>

		  <div class="form-group">
		    <label for="exampleInputPassword1">类型</label>
		    <input type="text" class="form-control" id="exampleInputPassword1"  name="shoptype" placeholder="类型" value="<%=shopinfo.shoptype%>">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">店铺地址</label>
		    <input type="text" class="form-control" id="exampleInputPassword1"  name="address" placeholder="店铺地址">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">店铺头像</label>
		    <input type="file"  id="exampleInputPassword1"  name="shopphoto" value="1">
		  </div>
			<input type="hidden" name="shopid" value="<%=shopinfo._id%>">
		  <button type="submit" class="btn btn-default">修改</button>
		</form>
		<%}%>
	</div>


    <script src="/bootstrap/js/jquery-1.11.0.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
  </body>
</html>
